<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="vertical"
    android:layout_margin="3dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/button_translate_english"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_english_gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/button_translate_englishGone"
            android:gravity="center"
            android:textColor="@color/grey_main"
            android:layout_centerVertical="true"
            android:textSize="28sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_translate_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/russian"
            android:textSize="12sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/grey_deep"/>
        <Button
            android:id="@+id/button_translate_englishGone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/english"
            android:textSize="12sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/grey_deep"
            android:visibility="gone"/>

    </RelativeLayout>



</LinearLayout>